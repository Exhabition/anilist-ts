{
    "compilerOptions": {
      "target": "es6",
      "lib": ["es2019", "dom"],
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "lib",
      "sourceMap": true,
      "resolveJsonModule": true,
      "declaration": true,
      "typeRoots": ["types", "node_modules/@types"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"],
    "typedocOptions": {
      "name": "AniList-TS",
      "out": "./docs",
      "entryPoints": [
        "./src",
      ],
      "excludeExternals": true
    }
  }
  